---
import '@/styles/global.css';
import MetaBar from '@/components/ui/MetaBar.tsx';
import FooterLinks from '@/components/FooterLinks.tsx';
import SectionNav from '@/components/SectionNav.tsx';

export interface Props {
  title: string;
  description?: string;
  meta?: string[];
}

const { title, meta = [] } = Astro.props as Props;
---

<main class="min-h-screen mx-auto w-full max-w-none 2xl:max-w-7xl p-[var(--shell-gap)] text-black [font-family:var(--font-plex-sans),'IBM_Plex_Sans',sans-serif] flex flex-col gap-[var(--shell-gap)]">
  <div class="flex flex-col gap-[var(--shell-gap)]">
    <header class="grid gap-[var(--shell-gap)]">
      <h1 class="m-0 text-[1.55rem] uppercase tracking-[0.18em]">{title}</h1>
    </header>
    <div class="flex flex-wrap md:flex-nowrap items-center gap-[calc(var(--shell-gap)/2)]">
      <a
        href="/"
        class="inline-flex h-[calc(var(--shell-gap)*1.5)] items-center border border-black bg-black px-[calc(var(--shell-gap)/2)] text-[12px] uppercase tracking-[0.25em] text-white hover:bg-black/90 shrink-0"
      >
        Back
      </a>
      <span class="hidden md:inline-block h-px w-[var(--shell-gap)] bg-black/60 shrink-0" aria-hidden="true" />
      {meta.length > 0 && <MetaBar items={meta} />}
    </div>
    <div id="section-nav-sticky" class="hidden md:block sticky top-0 z-40 overflow-hidden relative transition-colors duration-150 pt-[var(--shell-gap)] pb-[var(--shell-gap)] bg-white -mx-[var(--shell-gap)] px-[var(--shell-gap)]">
      <SectionNav client:only="react" />
    </div>
    <script>
      const stickyEl = document.getElementById('section-nav-sticky');
      const observer = new IntersectionObserver(
        (entries) => {
          const e = entries[0];
          if (e) stickyEl?.classList.toggle('is-stuck', e.intersectionRatio < 1);
        },
        { threshold: [1], rootMargin: '-1px 0px 0px 0px' }
      );
      if (stickyEl) observer.observe(stickyEl);
    </script>
    <section class="shell-grid grid">
      <slot />
      <section class="grid gap-[var(--shell-gap)]">
        <FooterLinks />
      </section>
    </section>
  </div>
</main>
